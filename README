# STEP 1: clean the raw db files (only before creating the db on mascot server)
ruby scripts/clean_files.rb data/mrnas_ucsc_lineformat.txt data/proteins_ucsc_db.fa data/danRer7.fa results/mrnas_ucsc_lineformat_clean.txt results/proteins_ucsc_db_clean.fa

# STEP 2: find unannotated proteins
# ruby scripts/find_unannotated_proteins.rb results/mrnas_ucsc_lineformat_clean.txt data/1d-29sep-zfish-ucsc-db.dat results/proteins_ucsc_db_clean.fa data/junctions_high-quality.bed data/danRer7.fa results/1d-29sep/peptides-1d-29sep.bed results/1d-29sep/mrnas_unannotated.bed results/1d-29sep/mrnas_unannotated_seqs.fa results/1d-29sep/mrnas_unannotated_lineformat.txt results/1d-29sep/proteins_unannotated.fa

# STEP 3: (after running mascot for unannotated) create bed file with the peptides of the unannotated proteins
ruby scripts/peptides_to_bed.rb results/1d-29sep/mrnas_unannotated_lineformat.txt data/1d-29sep-zfish-unannotated-db.dat results/1d-29sep/proteins_unannotated.fa results/1d-29sep/peptides_on_unannotated_proteins-1d-29sep.bed

# STEP 4: (only before creating the db on mascot server) join the db files (mrnas_lineformat and proteins)
cat results/mrnas_ucsc_lineformat_clean.txt > results/mrnas_full_db_lineformat.txt
grep -v "#" results/mrnas_unannotated_lineformat.txt >> results/mrnas_full_db_lineformat.txt
cat results/proteins_ucsc_db_clean.fa results/proteins_unannotated.fa >> results/proteins_full_db.fa

# STEP 5: (after running mascot for joined) find unexplained peptides with evidence
ruby scripts/find_unexplained_peptides.rb data/1d-29sep-zfish-full-db.dat results/mrnas_full_db_lineformat.txt data/mrnas_ucsc_lineformat.txt results/1d-29sep/unexplained_peptides_of_unannotated_proteins-1d-29sep.bed results/1d-29sep/unique_peptides_of_unannotated_proteins-1d-29sep.bed results/1d-29sep/nonunique_peptides_of_unannotated_proteins-1d-29sep.bed results/1d-29sep/unexplained_peptides_of_unannotated_proteins_per_spectra-1d-29sep.bed


